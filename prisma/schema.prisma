generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Roles {
  admin
  user
}

enum Statuses {
  ACTIVE
  INACTIVE
}

model User {
  id        Int      @id @default(autoincrement())
  fullName  String
  birthday  DateTime @db.Date
  email     String   @unique
  password  String
  role      Roles    @default(user)
  status    Statuses @default(ACTIVE)
}
